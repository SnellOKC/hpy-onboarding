            input#cand_division.form-control(type='date' name='actual_hire_date' value=(undefined===candidate ? '' : candidate.actual_hire_date_yyyy_mm_dd))
        div(class = 'col-lg-3')
          div(style = 'padding-top: 10px; font-size: 18px;') Hiring Communication
          hr(style = 'margin-top: 0px; margin-bottom: 0px')
          div(style = 'padding-left: 10px; padding-right: 10px;')
            input(type='checkbox', name='new_hire_announcement', checked=(undefined===candidate || candidate.new_hire_announcement != true ? false: true))
