                input(type='checkbox', name='term_announcement', checked=(undefined===candidate || candidate.term_announcement != true ? false: true))
                | &nbsp; Termination Announcement
              div(style = 'padding-left: 10px; padding-right: 10px;')
                input(type='checkbox', name='term_letter_sent', checked=(undefined===candidate || candidate.term_letter_sent != true ? false: true))
                | &nbsp; Letter Mailed and Emailed
        
