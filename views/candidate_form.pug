  div(class='container-fluid' style='padding: 0px 10px')
    form(method='POST' action='')
      div(class = 'row')
        div(class = 'col-lg-3') 
          div(class = 'cand-form') General
        div(class = 'col-lg-3') 
          div(class = 'cand-form') Onboarding
        div(class = 'col-lg-3') 
          div(class = 'cand-form') Hiring
        div(class = 'col-lg-3') 
          div(class = 'cand-form') Post-Hire
      div(class = 'row')
        div(class = 'col-lg-3')
          div(style = 'padding-top: 10px; font-size: 18px;') Candidate
          hr(style = 'margin-top: 0px; margin-bottom: 0px')
          div(class = 'col-lg-8' style = 'padding-top: 10px; padding-left: 0;') Name
            input#name.form-control(type='text', placeholder='John Smith...' name='name' required='true' value=(undefined===candidate ? '' : candidate.name))
          div(class = 'col-lg-4' style = 'padding-top: 10px; padding-left: 0; padding-right: 0') Cand ID
            input#cand_empid.form-control.input-sm(type='text', placeholder='' name='cand_empid' value=(undefined===candidate ? '' : candidate.cand_empid))
          div Offer Date
            input#cand_division.form-control(type='date' name='wd_offer_date' value=(undefined===candidate ? '' : candidate.wd_offer_date_yyyy_mm_dd))
          div Tentative Hire Date
            input#cand_division.form-control(type='date' name='tentative_hire_date' value=(undefined===candidate ? '' : candidate.tentative_hire_date_yyyy_mm_dd))
          div Candidate Title
            select#cand_title.form-control(type='select', placeholder = 'Select title' name = 'cand_title' required = 'true')
              option(value='RM' selected=(undefined===candidate || candidate.cand_title != 'RM' ? false:'selected')) RM
              option(value='SPA' selected=(undefined===candidate || candidate.cand_title != 'SPA' ? false:'selected')) SPA
              option(value='TM' selected=(undefined===candidate || candidate.cand_title != 'TM' ? false:'selected')) TM
              option(value='Payroll TM' selected=(undefined===candidate || candidate.cand_title != 'Payroll TM' ? false:'selected')) Payroll TM
              option(value='DM' selected=(undefined===candidate || candidate.cand_title != 'DM' ? false:'selected')) DM
              option(value='Payroll DM' selected=(undefined===candidate || candidate.cand_title != 'Payroll DM' ? false:'selected')) Payroll DM
              option(value='Cross-Sell RM' selected=(undefined===candidate || candidate.cand_title != 'Cross-Sell RM' ? false:'selected')) Cross-Sell RM
              option(value='E-Commerce Specialist' selected=(undefined===candidate || candidate.cand_title != 'E-Commerce Specialist' ? false:'selected')) E-Commerce Specialist
              option(value='National Accounts Director' selected=(undefined===candidate || candidate.cand_title != 'National Accounts Director' ? false:'selected')) National Accounts Director
          div(style = 'padding-top: 10px;  font-size: 18px;') Organization
          hr(style = 'margin-top: 0px; margin-bottom: 0px')
          div(class = 'col-lg-8' style = 'padding-top: 10px; padding-left: 0;') Manager
            input#manager_name.form-control(type='text', placeholder='John Smith...' name='manager_name' required='true' value=(undefined===candidate ? '' : candidate.manager_name))
          div(class = 'col-lg-4' style = 'padding-top: 10px; padding-left: 0; padding-right: 0') Emp ID
            input#manager_empid.form-control(type='text', placeholder='' name='manager_empid' value=(undefined===candidate ? '' : candidate.manager_empid))
          div Region
            input#cand_region.form-control(type='text' name='cand_region' value=(undefined===candidate ? '' : candidate.cand_region))
          div Division
            input#cand_division.form-control(type='text' name='cand_division' value=(undefined===candidate ? '' : candidate.cand_division))
        div(class = 'col-lg-3')
          div(style = 'padding-top: 10px; font-size: 18px;') Candidate Tasks/Paperwork
          hr(style = 'margin-top: 0px; margin-bottom: 0px')
          div(style = 'padding-left: 10px; padding-right: 10px;')
            input(type='checkbox', name='signed_offer_letter', checked=(undefined===candidate || candidate.signed_offer_letter != true ? false:true)) 
            | &nbsp; Signed Offer Letter
          div(style = 'padding-left: 10px; padding-right: 10px;')
            input(type='checkbox', name='signed_sales_agreement', checked=(undefined===candidate || candidate.signed_sales_agreement != true ? false: true))
            | &nbsp; Signed Sales Agreement
          div(style = 'padding-left: 10px; padding-right: 10px;')
            input(type='checkbox', name='signed_background_auth', checked=(undefined===candidate || candidate.signed_background_auth != true ? false: true))
            | &nbsp; Signed Background Authorization
          div(style = 'padding-top: 10px; font-size: 18px;') Ordering Background
