extends layout

block content

  h1 #{title}
          
  form(method='POST' action='')
    div.form-group
      label(for='cand_name') Candidate:
      input#cand_name.form-control(type='text', placeholder='John Smith' name='cand_name' required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg